<p>
  <%= image_tag resource.profile.avatar.image.url(:thumb) %>
</p>
<p>
  <strong><%= Account.human_attribute_name(:email) %>:</strong><br>
  <%= resource.email %>
</p>
<p>
  <strong><%= Account.human_attribute_name(:username) %>:</strong><br>
  <%= resource.username %>
</p>
<p>
  <strong><%= Account.human_attribute_name(:free_member_level) %>:</strong><br>
  <%= resource.free_member_level %>
</p>
<p>
  <strong><%= Profile.human_attribute_name(:first_name) %>:</strong><br>
  <%= resource.profile.first_name %>
</p>
<p>
  <strong><%= Profile.human_attribute_name(:last_name) %>:</strong><br>
  <%= resource.profile.last_name %>
</p>
<p>
  <strong><%= Profile.human_attribute_name(:gender) %>:</strong><br>
  <%= resource.profile.gender %>
</p>
<p>
  <strong><%= Profile.human_attribute_name(:country) %>:</strong><br>
  <%= resource.profile.country.name rescue '' %>
</p>
<p>
  <strong><%= Profile.human_attribute_name(:birth_date) %>:</strong><br>
  <%= resource.profile.birth_date %>
</p>
<p>
  <strong><%= Account.human_attribute_name(:last_sign_in_at) %>:</strong><br>
  <%= resource.last_sign_in_at ? l(resource.last_sign_in_at) : t('helpers.never') %>
</p>
<p>
  <strong><%= Account.human_attribute_name(:created_at) %>:</strong><br>
  <%= resource.created_at %>
</p>
<p>
  <strong><%= Account.human_attribute_name(:updated_at) %>:</strong><br>
  <%= resource.updated_at %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
  collection_path, :class => 'btn'  %>
<% if !current_admin.is_view_only? %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_resource_path, :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
  resource_path, :method => 'delete', :confirm => t('.confirm',
  :default => t("helpers.links.confirm", :default => 'Are you
  sure?')), :class => 'btn btn-danger' %>
<% end %>
</div>
