<%= simple_form_for @admin, :url => admin_profile_path, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :current_password, :hint => t('admin.passwords.edit.current_password_hint') %>
  <%= f.simple_fields_for :admin_profile do |profile| %>
    <%= profile.input :username, :input_html => { :class => 'input-xxlarge' } %>
    <%= profile.input :first_name, :input_html => { :class => 'input-xxlarge' } %>
    <%= profile.input :last_name, :input_html => { :class => 'input-xxlarge' } %>
  <% end %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t('helpers.links.cancel')), admin_root_path, :class => 'btn' %>
  </div>
<% end %>
