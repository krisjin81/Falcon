<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :id => 'sign_up' }, :wrapper => :light) do |f| %>
  <legend><%= t('affiliates.registrations.new.title') %></legend>

  <%= f.input :email, :input_html => { :class => 'input-xxlarge' }, :placeholder => User.human_attribute_name(:email) %>
  <%= f.input :password, :input_html => { :class => 'input-xxlarge' }, :placeholder => User.human_attribute_name(:password) %>

  <div class="form-actions">
    <%= f.submit t('helpers.actions.sign_up'), :class => 'btn btn-primary' %>
    <div class="pull-right">
      <%= link_to t('helpers.actions.sign_in'), new_session_path(resource_name), :class => 'btn' %>
      <%= link_to t('helpers.actions.forgot_your_password'), new_password_path(resource_name), :class => 'btn' %>
      <%= link_to t('helpers.actions.resend_confirmation_instruction'), new_confirmation_path(resource_name), :class => 'btn' %>
    </div>
  </div>
<% end %>