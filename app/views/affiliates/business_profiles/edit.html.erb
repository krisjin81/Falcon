<%= simple_form_for(@business_profile, :url => affiliates_business_profiles_path, :html => { :id => 'edit_business_profile', :method => :put }) do |f| %>
  <legend><%= t('affiliates.profiles.edit.title') %></legend>
  <%= f.input :business_name, :input_html => { :class => 'input-xxlarge' } %>
  <div class="alert">
    <button class="close" data-dismiss="alert">Ã—</button>
    <%=raw t('affiliates.profiles.edit.business_name_warning') %>
  </div>
  <%= f.input :business_type, :collection => BusinessType.to_a, :as => :radio_buttons %>
  <%= f.input :style, :collection => Style.to_a, :as => :radio_buttons %>
  <%= f.input :audience, :collection => Audience.to_a, :as => :radio_buttons %>
  <%= f.input :age_group, :collection => AgeGroup.to_a, :as => :radio_buttons %>
  <%= f.input :contact_first_name, :input_html => { :class => 'input-xxlarge' } %>
  <%= f.input :contact_last_name, :input_html => { :class => 'input-xxlarge' } %>
  <%= f.input :contact_email, :input_html => { :class => 'input-xxlarge' } %>
  <%= f.input :about, :input_html => { :class => 'input-xxlarge', :rows => 5 } %>
  <%= f.input :website, :input_html => { :class => 'input-xxlarge' } %>
  <%= f.input :country_id, :input_html => { :class => 'input-xxlarge' }, :collection => Country.cached, :prompt => t('helpers.please_select') %>
  <div class="form-actions">
    <%= f.submit t('helpers.actions.update'), :class => 'btn btn-primary' %>
    <%= link_to t('helpers.actions.cancel'), root_path, :class => 'btn' %>
  </div>
<% end %>