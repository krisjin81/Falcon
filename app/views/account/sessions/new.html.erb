<div class="centred-block">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :id => 'sign_in' }, :wrapper => :light) do |f| %>
    <legend><%= t('account.sessions.new.title') %></legend>

    <%= f.input :email, :input_html => { :class => 'input-xxlarge' }, :placeholder => Account.human_attribute_name(:email) %>
    <%= f.input :password, :input_html => { :class => 'input-xxlarge' }, :placeholder => Account.human_attribute_name(:password) %>

    <% if devise_mapping.rememberable? -%>
      <%= f.input :remember_me, :as => :boolean, :label => false, :inline_label => true %>
    <% end -%>

    <div class="form-actions">
      <%= f.submit t('helpers.actions.sign_in'), :class => 'btn btn-primary' %>
      <div class="pull-right">
        <%= link_to t('helpers.actions.sign_up'), new_registration_path(resource_name), :class => 'btn' %>
        <%= link_to t('helpers.actions.forgot_your_password'), new_password_path(resource_name), :class => 'btn' %>
        <%= link_to t('helpers.actions.resend_confirmation_instruction'), new_confirmation_path(resource_name), :class => 'btn' %>
      </div>
    </div>
  <% end %>

  <% if OAUTH_CONFIG['facebook'] %>
    <p><%= fb_login_button(image_tag("facebook_icon.png")) %></p>
  <% end %>
</div>