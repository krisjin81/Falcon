<div id="pictures">
  <% if pictures.present? %>
    <h2 class="header">Pictures: <%= link_to 'Add More Pictures', new_account_picture_path, :class => 'btn btn-primary', :remote => true %></h2>
    <% pictures.each do |picture| %>
      <%= render 'account/pictures/picture', :picture => picture %>
    <% end %>
  <% else %>
    <%= render 'account/pictures/new', :picture => Picture.new %>
  <% end %>
</div>