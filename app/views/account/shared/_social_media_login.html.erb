<% if defined?(OAUTH_CONFIG) %>
  <div class="social-media">
    <%= link_to(image_tag("icons/facebook.png"), account_omniauth_authorize_path(:facebook), :title => t('oauth_providers.facebook')) if OAUTH_CONFIG['facebook'] %>
    <%= link_to(image_tag("icons/twitter.png"), account_omniauth_authorize_path(:twitter), :title => t('oauth_providers.twitter')) if OAUTH_CONFIG['twitter'] %>
    <%= link_to(image_tag("icons/google.png"), account_omniauth_authorize_path(:google), :title => t('oauth_providers.google')) %>
  </div>
<% end %>