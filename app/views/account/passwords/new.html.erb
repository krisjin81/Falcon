<div class="centred-block">
  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :id => 'new_password', :method => :post }, :wrapper => :light) do |f| %>
    <legend><%= t('account.passwords.new.title') %></legend>

    <p><%= t('account.passwords.new.description') %></p>

    <%= f.input :email, :input_html => { :class => 'input-xxlarge' }, :placeholder => Account.human_attribute_name(:email) %>

    <div class="form-actions">
      <%= f.submit t('helpers.actions.send'), :class => 'btn btn-primary' %>
      <div class="pull-right">
        <%= link_to t('helpers.actions.sign_in'), new_session_path(resource_name), :class => 'btn' %>
        <%= link_to t('helpers.actions.sign_up'), new_registration_path(resource_name), :class => 'btn' %>
        <%= link_to t('helpers.actions.resend_confirmation_instruction'), new_confirmation_path(resource_name), :class => 'btn' %>
      </div>
    </div>
  <% end %>
</div>