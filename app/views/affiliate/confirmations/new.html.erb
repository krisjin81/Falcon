<div class="centred-block">
  <%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :id => 'confirm' }, :wrapper => :light) do |f| %>
    <legend><%= t('affiliate.confirmations.new.title') %></legend>

    <%= f.input :email, :input_html => { :class => 'input-xxlarge' }, :placeholder => Affiliate.human_attribute_name(:email) %>

    <div class="form-actions">
      <%= f.submit t('helpers.actions.send'), :class => 'btn btn-primary' %>
      <div class="pull-right">
        <%= link_to t('helpers.actions.sign_in'), new_session_path(resource_name), :class => 'btn' %>
        <%= link_to t('helpers.actions.sign_up'), new_registration_path(resource_name), :class => 'btn' %>
        <%= link_to t('helpers.actions.forgot_your_password'), new_password_path(resource_name), :class => 'btn' %>
      </div>
    </div>
  <% end %>
</div>