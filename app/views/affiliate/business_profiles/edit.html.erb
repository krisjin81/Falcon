<%= simple_form_for(@business_profile, :url => affiliate_business_profiles_path, :html => { :id => 'edit_business_profile', :method => :put }) do |f| %>
  <legend><%= t('affiliate.profiles.edit.title') %></legend>
  <%= f.input :business_name, :input_html => { :class => 'input-xxlarge' }, :disabled => !@business_profile.business_name_editable? %>
  <div class="alert">
    <button class="close" data-dismiss="alert">Ã—</button>
    <%=raw t('affiliate.profiles.edit.business_name_warning') %>
  </div>
  <%= f.simple_fields_for :avatar do |avatar| %>
    <%= avatar.input :image do %>
      <%= avatar.file_field :image, :class => 'input-xxlarge' %>
      <%= image_tag @business_profile.avatar.image.url(:thumb) %>
    <% end %>
  <% end %>
  <%= f.input :email do %>
    <%= text_field_tag :email, @business_profile.affiliate.email, :disabled => true, :class => 'disabled input-xxlarge' %>
  <% end %>
  <%= f.input :business_type, :collection => BusinessType.to_a,
    :prompt => t('helpers.please_select') %>
  <%= f.input :contact_first_name, :input_html => { :class => 'input-xxlarge' } %>
  <%= f.input :contact_last_name, :input_html => { :class => 'input-xxlarge' } %>
  <%= f.input :contact_email, :input_html => { :class => 'input-xxlarge' } %>
  <%= f.input :about, :input_html => { :class => 'input-xxlarge', :rows => 5 } %>
  <%= f.input :website, :input_html => { :class => 'input-xxlarge' } %>
  <%= profile.input :country %>
  <%= f.input :country %>

  <div class="form-actions">
    <%= f.submit t('helpers.actions.update'), :class => 'btn btn-primary' %>
    <%= link_to t('helpers.actions.cancel'), root_path, :class => 'btn' %>
  </div>
<% end %>
